{
  "name": "@starbeam-workspace/root",
  "version": "1.0.0",
  "type": "module",
  "types": "src/index.ts",
  "main": "src/index.ts",
  "private": true,
  "license": "MIT",
  "exports": {
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "esno ./scripts/index.ts build",
    "prepack": "pnpm run build",
    "dev": "esno ./scripts/index.ts",
    "demo": "esno ./scripts/index.ts demo",
    "test:workspace": "esno ./scripts/index.ts test -w -v",
    "test": "esno ./scripts/index.ts test -v",
    "test:dev": "vitest --mode=development",
    "test:prod": "PROD=1 DEV= pnpm -r test:specs",
    "test:types": "tsc -b",
    "test:lint": "eslint",
    "check:types": "tsc --build",
    "check:unused": "esno ./scripts/index.ts unused",
    "check:lint": "eslint --cache -c ./.eslintrc.cjs --ext .ts,.tsx,.mjs .",
    "release": "esno ./scripts/index.ts release",
    "test:build": "tsc -b",
    "test:workspace:lint": "eslint --cache -c ./.eslintrc.cjs --max-warnings=0 --ext .ts,.tsx,.mjs .",
    "test:workspace:types": "tsc -b",
    "test:workspace:specs": "vitest --run"
  },
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.19.1",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.19.1",
    "@babel/preset-env": "^7.19.1",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@babel/runtime": "^7.19.0",
    "@changesets/cli": "^2.24.4",
    "@starbeam-workspace/build-support": "workspace:^",
    "@types/eslint": "^8.4.6",
    "@types/node": "^18.8.0",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "@vitest/ui": "^0.23.4",
    "eslint": "^8.24.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "esno": "^0.16.3",
    "fast-glob": "^3.2.7",
    "prettier": "^2.7.1",
    "tslib": "^2.4.0",
    "typescript": "^4.8.3",
    "vite": "^3.1.4",
    "vitest": "0.23.4",
    "happy-dom": "^7.4.0",
    "jsdom": "^20.0.1"
  },
  "starbeam": {
    "type": "root",
    "used": [
      {
        "reason": "vscode eslint pulled in depcheck's .eslintrc.yml",
        "packages": [
          "eslint-config-airbnb"
        ]
      },
      {
        "reason": "eslint",
        "packages": [
          "@types/eslint"
        ]
      },
      {
        "reason": "babel",
        "packages": [
          "@babel/plugin-proposal-decorators",
          "@babel/plugin-syntax-dynamic-import",
          "@babel/plugin-transform-runtime",
          "@babel/preset-env",
          "@babel/preset-typescript",
          "@babel/preset-react"
        ]
      },
      {
        "reason": "vitest and dependencies it uses directly are in the root package so that vitest can identify its own test suites when the entire suite is run at once",
        "packages": [
          "vitest",
          "@vitest/ui",
          "happy-dom",
          "jsdom"
        ]
      },
      {
        "reason": ".changeset/config.json",
        "packages": [
          "@changesets/cli"
        ]
      },
      {
        "reason": "package.json scripts",
        "packages": [
          "esno"
        ]
      },
      {
        "reason": "build packages",
        "packages": [
          "typescript",
          "tslib",
          "@babel/runtime"
        ]
      },
      {
        "reason": "tsconfig.shared.json",
        "packages": [
          "vite"
        ]
      }
    ]
  },
  "pnpm": {
    "overrides": {
      "typescript": "^4.8.3",
      "vite": "3.1.4",
      "vue": "^3.2.39",
      "vitest": "0.23.4",
      "rollup": "2.79.1",
      "@rollup/plugin-commonjs": "^22.0.2",
      "@rollup/plugin-node-resolve": "^14.1.0",
      "@types/node": "18.7.23",
      "eslint": "^8.24.0"
    },
    "peerDependencyRules": {
      "allowAny": [
        "react",
        "react-dom"
      ]
    }
  },
  "nodemonConfig": {
    "watch": [
      "package.json",
      "pnpm-workspace.yaml",
      "scripts"
    ]
  },
  "volta": {
    "node": "18.9.1"
  },
  "publishConfig": {
    "main": "dist/index.cjs",
    "types": "dist/index.d.ts",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js",
        "default": "./dist/index.cjs"
      }
    }
  }
}
